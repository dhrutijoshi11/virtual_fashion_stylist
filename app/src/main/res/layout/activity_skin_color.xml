<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".QandActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:backgroundTint="@color/gray"
        app:menu="@menu/toolbar"
        app:navigationIcon="@drawable/menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VFS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"></TextView>

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        android:background="@drawable/back"
        tools:context=".QandActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginTop="20dp"
                    android:text="Lets find out about Your Pallate according to Your skin color "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="54dp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_bg"
                    android:backgroundTint="@color/gray"
                    android:text="What is you skin color?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="361dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btnLight"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="85dp"
                        android:background="@android:color/transparent"
                        android:text="" />

                    <ImageView
                        android:id="@+id/light_image"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:src="@drawable/light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btnNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="85dp"
                        android:background="@android:color/transparent"
                        android:text="" />

                    <ImageView
                        android:id="@+id/normal_image"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:src="@drawable/normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btnTan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="85dp"
                        android:background="@android:color/transparent"
                        android:text="" />

                    <ImageView
                        android:id="@+id/tan_image"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:src="@drawable/tan" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/btnBrown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="85dp"
                        android:background="@android:color/transparent"
                        android:text="" />

                    <ImageView
                        android:id="@+id/brown_image"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:src="@drawable/brown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btnDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="85dp"
                        android:background="@android:color/transparent"
                        android:text="" />

                    <ImageView
                        android:id="@+id/verydark_image"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:src="@drawable/verydark" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_input"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:text="Submit"
                    android:textSize="16sp" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>