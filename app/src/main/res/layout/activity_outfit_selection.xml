<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outbg2">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:backgroundTint="#BF8FA0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VFS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold|italic"></TextView>

    </com.google.android.material.appbar.MaterialToolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#59E4E2E2" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_below="@+id/toolBar"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/tbg"
        android:text="     Select the event which you want to dress up!!"
        android:fontFamily="@font/akaya_telivigala"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="italic" />

    <RadioGroup
        android:id="@+id/eventRadioGroup"
        android:layout_width="398dp"
        android:layout_height="411dp"
        android:layout_below="@+id/text"
        android:layout_centerInParent="true"
        android:layout_marginTop="-19dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <RadioButton
            android:id="@+id/Wedding"
            android:layout_width="353dp"
            android:layout_height="88dp"
            android:background="@drawable/tbg"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Wedding"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <RadioButton
            android:id="@+id/Party"
            android:layout_width="347dp"
            android:layout_height="94dp"
            android:background="@drawable/tbg"
            android:text="Party"
            android:textAlignment="center"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <RadioButton
            android:id="@+id/Casual"
            android:layout_width="345dp"
            android:layout_height="93dp"
            android:background="@drawable/tbg"
            android:text="Casual"
            android:textAlignment="center"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <RadioButton
            android:id="@+id/Formal"
            android:layout_width="347dp"
            android:layout_height="87dp"
            android:background="@drawable/tbg"
            android:text="Formal"
            android:textAlignment="center"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/white"
            android:textSize="55sp" />

    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_below="@+id/eventRadioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:backgroundTint="#A5848F"
        android:text="Lets Find Out!!"
        android:textColor="@color/white"
        android:fontFamily="@font/akaya_telivigala"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>
